<h1>Diary entries</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Hours</th>
      <th>Rating</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @diary_entries.each do |diary_entry| %>
      <tr>
        <td class="well"><%= link_to diary_entry.wakeup_date, diary_entry %></td>
        <td class="well"><%= diary_entry.sleep_duration_in_hours_as_string %></td>
        <td class="well"><%= diary_entry.rating %></td>
        <td class="well">
        <%= link_to 'Edit', edit_diary_entry_path(diary_entry) %> |
        <%= link_to 'Destroy', diary_entry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Diary entry', new_diary_entry_path %>
